{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#003543",
          "foreground": "#fff",
          "style": "powerline",
          "template": "<#fff> \ue641 </>{{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "background": "#003543",
          "foreground": "#fff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "windows": "\uf179"
          },
          "style": "powerline",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "type": "os"
        },
        {
          "background": "#003543",
          "foreground": "#d2ff5e",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "background": "#0087D8",
          "foreground": "#003544",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "powerline",
          "template": " \ue5ff {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#d2ff5e",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
            "{{ if gt .Behind 0 }}#f17c37{{ end }}"
          ],
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "style": "powerline",
          "template": " {{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "type": "aws",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "#ffffff",
          "background": "#FFA400",
          "template": "{{ if .Env.AWS_PROFILE }} [aws] {{.Profile}}{{if .Region}}@{{.Region}} {{end}} {{end}}",
          "properties": {
            "display_default": false
          }
        },
        {
          "type": "az",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "#000000",
          "background": "#9ec3f0",
          "template": "{{ if .Env.Enable_Azure_CLI_Prompt }} [azure] {{ .Name }} {{end}}",
          "properties": {}
        },
        {
          "type": "gcp",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "#ffffff",
          "background": "#47888d",
          "template": "{{ if .Env.CLOUDSDK_ACTIVE_CONFIG_NAME }} [gcp] {{ .Env.CLOUDSDK_ACTIVE_CONFIG_NAME }} {{end}}"
        },
        {
          "type": "kubectl",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "#000000",
          "background": "#ebcc34",
          "template": "{{ if .Env.Enable_Kubeconfig_Prompt }} [k8s] {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} {{end}}",
          "properties": {
            "parse_kubeconfig": true
          }
        },
        {
          "background": "#33DD2D",
          "background_templates": [
            "{{ if gt .Code 0 }}#f1184c{{ end }}"
          ],
          "foreground": "#242424",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": " \uea6c ",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#FFD700",
          "style": "plain",
          "template": " \u26a1 ",
          "type": "root"
        },
        {
          "foreground": "#f1184c",
          "style": "plain",
          "template": "ðŸš€ ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#FFD700",
    "template": "{{if .Root}}\u26a1 {{end}}ðŸš€ "
  },
  "version": 2
}